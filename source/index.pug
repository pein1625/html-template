extends layout/page

block content
  article.h-banner
    img.h-banner__img(src="./images/home-banner-img.png", alt="")
    .container
      .h-banner__subtitle.wow.fadeInUp(data-wow-delay="0.1s") Bộ công thương Việt Nam
      .h-banner__title.wow.fadeInUp(data-wow-delay="0.3s") Hệ thống  cơ sở dữ liệu
        br
        | quản lý & điều hành xăng dầu
      div.wow.fadeInUp(data-wow-delay="0.5s")
        a.h-banner__btn(href="#!") Xem chi tiết
          i.fal.fa-angle-right.ms-2

  section.section.section--light
    img.section__bg(src="./images/world-map.png", alt="")
    .container
      h2.section__title Thông báo
      +news-slider

  section.section
    .container
      a.d-block.mb-4.mb-lg-30.mb-xxl-40(href="#!")
        img.w-100(src="https://via.placeholder.com/1140x174", alt="")

      h2.section__title Thống kê

      .row.g-30
        .col-lg-6
          .stat
            img.stat__bg(src="./images/stat-bg-1.jpg", alt="")
            .stat__number
              img(src="./images/stat-icon-1.png", alt="")
              span.ms-2.js-count-to(data-count-to="123") 123
            .start__label Đại lý xăng dầu trên địa bàn
        .col-lg-6
          .stat
            img.stat__bg(src="./images/stat-bg-2.jpg", alt="")
            .stat__number
              img(src="./images/stat-icon-2.png", alt="")
              span.ms-2.js-count-to(data-count-to="456") 456
            .start__label Đại lý xăng dầu trên địa bàn

  section.section.section--primary
    img.section__bg(src="./images/section-bg-1.png", alt="")
    .container
      h2.section__title Giá xăng dầu hiện tại

      .row
        .col-lg-6.col-md-8
          .pricing.wow.fadeInUp(data-wow-delay="0.2s")
            table.table
              thead
                tr
                  th(width="50%") Mặt hàng
                  th Giá điều chỉnh lúc 15:00 ngày 01/11/2022
              tbody
                tr
                  td.pricing__title Xăng RON 95-III
                  td.pricing__value
                    span.pricing__price 22.750
                    span.pricing__change.text-success 410
                      i.fal.fa-arrow-up.ms-2
                tr
                  td.pricing__title Xăng RON 92-III
                  td.pricing__value
                    span.pricing__price 21.870
                    span.pricing__change.text-danger 410
                      i.fal.fa-arrow-down.ms-2
                tr
                  td.pricing__title Dầu Diesel
                  td.pricing__value
                    span.pricing__price 25.070
                    span.pricing__change.text-success 410
                      i.fal.fa-arrow-up.ms-2
                tr
                  td.pricing__title Dầu Mazut
                  td.pricing__value
                    span.pricing__price 19.870
                    span.pricing__change.text-success 410
                      i.fal.fa-arrow-up.ms-2
                tr
                  td.pricing__title Xăng E5
                  td.pricing__value
                    span.pricing__price 21.870
                    span.pricing__change.text-success 410
                      i.fal.fa-arrow-up.ms-2

  section.section.section--light
    img.section__bg(src="./images/world-map.png", alt="")
    .container
      h2.section__title Biểu đồ biến động giá xăng dầu

      .row
        .col-lg-6.mb-4.mb-lg-0.wow.fadeInRight(data-wow-delay="0.1s")
          img.w-100(src="./images/chart-1.jpg", alt="")
        .col-lg-6.wow.fadeInRight(data-wow-delay="0.3s")
          img.w-100(src="./images/chart-2.jpg", alt="")

  section.section
    .container
      .row
        .col-lg-4.mb-3.mb-lg-40
          a.d-block.wow.fadeInLeft(href="./map.html")
            img.w-100(src="./images/as-banner-3.jpg", alt="")
        .col-lg-8.mb-3.mb-lg-40
          h2.section__title Văn bản
          - for(let i = 0; i < 4; i++)
            .mb-3.pb-3.mb-lg-4.pb-lg-4.border-bottom.wow.fadeIn(data-wow-delay=`${i * 0.15 + 0.4}s`)
              +doc(`#md-doc-${i}`)
              +md-doc(`md-doc-${i}`)
          .text-end.wow.fadeIn(data-wow-delay=`1s`)
            a.n-link(href="./documents.html") Xem tất cả
              i.fal.fa-arrow-right.ms-2

      a.d-block
        img.w-100(src="https://via.placeholder.com/1140x174", alt="")
