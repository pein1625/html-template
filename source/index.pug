extends layout/page

mixin popup
  #popup-post.popup.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          button.close(type="button", data-bs-dismiss="modal")
            i.fal.fa-times
        .modal-body
          .popup__frame.ratio.ratio-16x9
            iframe(src="./post.html", frameborder="0")

mixin popup-share
  #popup-share.popup.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered.popup-share
      .modal-content
        .modal-header
          button.close.close--sm(type="button", data-bs-dismiss="modal")
            i.fal.fa-times
        .modal-body
          .popup__frame.ratio.ratio-16x9
            iframe(src="./share.html", frameborder="0")

mixin popup-layout
  #popup-layout.popup.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          button.close(type="button", data-bs-dismiss="modal")
            i.fal.fa-times
        .modal-body
          .popup__frame.ratio.ratio-16x9
            iframe(src="./layout.html", frameborder="0")

mixin popup-list
  #popup-list.popup.popup--list.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          a.close.close--list(href="./list.html")
            i.fal.fa-times
        .modal-body
          .popup__frame.ratio.ratio-16x9
            iframe(src="./list.html", frameborder="0")

mixin popup-frame
  #popup-frame.popup.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          button.close(type="button", data-bs-dismiss="modal")
            i.fal.fa-times
        .modal-body
          .popup__frame.ratio.ratio-16x9
            iframe(src="./frame.html", frameborder="0")

block content
  .container.py-5
    button.btn.btn-primary(type="button", data-bs-toggle="modal", data-bs-target="#popup-post") Open Post
    button.btn.btn-primary(type="button", data-bs-toggle="modal", data-bs-target="#popup-frame") Open Frame
    button.btn.btn-primary(type="button", data-bs-toggle="modal", data-bs-target="#popup-layout") Open Layout
    button.btn.btn-primary(type="button", data-bs-toggle="modal", data-bs-target="#popup-share") Open Share
    button.btn.btn-primary(type="button", data-bs-toggle="modal", data-bs-target="#popup-list") Open List
    button.btn.btn-primary(type="button", data-bs-toggle="modal", data-bs-target="#popup-intro") Open Intro (mobile)
    button.btn.btn-primary(type="button", data-bs-toggle="modal", data-bs-target="#popup-menu") Open Menu

    .mt-5
      iframe.rounded.shadow(src="./subtitle.html", frameborder="0", style="width: 230px; height: 320px;")

  +popup
  +popup-share
  +popup-layout
  +popup-list
  +popup-frame
  +popup-menu
