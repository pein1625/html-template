extends layout/page

block content
  section.section
    .container
      .s-login
        .row
          .col-xl-8.me-xl-auto
            .login__body
              .login__subtitle Sanviet.vn
              .login__title Sàn thương mại điện
                br
                | tử Hợp nhất

              .d-none.d-xl-block
                img(src="./images/login-img.png", alt="")

          .col-xl-4.mt-30.mt-xl-30
            form.login-form
              h2.login-form__title Đăng nhập

              .mb-20
                input.form-control(type="text", placeholder="Tên đăng nhập")
              .mb-20
                .n-password
                  input.form-control(type="password", placeholder="Mật khẩu")
                  .n-password__toggle
                    i.fal.fa-fw.fa-eye

              .row.g-3.justify-content-between.align-items-center.login-form__text
                .col-auto
                  +checkbox
                    | &nbsp; Giữ tôi luôn đăng nhập
                .col-auto
                  a.login-form__link(href="#!") Quên mật khẩu?

              .d-grid.mt-4
                button.login-form__btn.btn.btn-primary(type="submit") Đăng nhập

              .mt-4.login-form__text Chưa có tài khoản?&nbsp;
                a(href="#!") Đăng ký
