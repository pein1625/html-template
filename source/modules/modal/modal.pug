mixin md-leaderboard
  .md-leaderboard.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-underlay
        button.modal-close(type="button", data-bs-dismiss="modal")
        .modal-body
          .md-leaderboard__title Leaderboard
          .md-leaderboard__list
            - for(let i = 0; i < 10; i++)
              .md-leaderboard__item
                .md-leaderboard__place
                  if (i < 3)
                    img(src="./images/medal-" + (i+1) + ".svg", alt="")
                  else
                    = i+1
                .md-leaderboard__avatar
                  img(src="./images/avatar.png", alt="")
                .md-leaderboard__name Player Name
                .md-leaderboard__point
                  i.fal.fa-star.me-2
                  span 60
                .md-leaderboard__time
                  i.fal.fa-stopwatch.me-2
                  span 5p30s

