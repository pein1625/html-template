mixin md-form
  .md-form.modal.fade(tabindex='-1')
    .modal-dialog.modal-dialog-centered
      .modal-content
        .modal-header
          h4.modal-title.md-form__title Form title here
          button.md-form__close.btn-close(type="button", data-bs-dismiss="modal")
        .modal-body
          .mb-3
            label.form-label Form label 1
            input.form-control(type="text", placeholder="Form input placeholder")
          .mb-3
            label.form-label Form label 2
            input.form-control(type="text", placeholder="Form input placeholder")
          .mb-3
            label.form-label Form label 3
            select.form-select
              option Select option 1
              option Select option 2
              option Select option 3
              option Select option 4
              option Select option 5
          .mb-3
            label.form-label Form label 4
            textarea.form-control(rows="4")
          .mb-0
            +checkbox
              span Form item checkbox
        .modal-footer
          button.btn.btn-light.px-4(type="button", data-bs-dismiss="modal") Cancel
          button.btn.btn-primary.px-4(type="button") Save
