mixin banner(bg, title='Doanh nghiệp', desc, search)
  article.banner(class=search ? 'pb-40' : '', style=search ? 'position: relative; z-index: 100' : '')
    img.banner__bg(src=bg, alt="")
    h3.banner__title= title
    if (desc)
      .banner__desc= desc
