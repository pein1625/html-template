mixin puzzle
  .puzzle.js-puzzle
    .puzzle__body
      .puzzle__wrapper
        .puzzle__inner
          .cell.cell--empty(class=`cell--0`, data-index=0)
            .cell-caret.cell-caret--top
            .cell-caret.cell-caret--bottom
            .cell-caret.cell-caret--left
            .cell-caret.cell-caret--right
          .cell(class=`cell--1`, data-index=1)
          .cell(class=`cell--2`, data-index=2)
          .cell(class=`cell--3`, data-index=3)
          .cell(class=`cell--4`, data-index=4)
          .cell(class=`cell--5`, data-index=5)
          .cell(class=`cell--6`, data-index=6)
          .cell(class=`cell--7`, data-index=7)
          .cell(class=`cell--8`, data-index=8)
          .cell(class=`cell--9`, data-index=9)
          .cell(class=`cell--10`, data-index=10)
          .cell(class=`cell--11`, data-index=11)
          .puzzle__lock
            .puzzle__lock-inner
              button.button.puzzle__start.js-puzzle-start(type="button") Bắt đầu
              button.button.puzzle__end(type="button") Kết thúc
          .puzzle__board
            .puzzle__type Minigame
            .puzzle__name Ghép hình thẻ
            .puzzle__time Còn lại:&nbsp;
              span.puzzle__remaining
                | 60s
    .puzzle__footer
      a.puzzle__link.js-switch-modal(href=".md-puzzle-guide")
        i.fal.fa-question-circle.me-2
        | Hướng dẫn

