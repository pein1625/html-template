mixin img(type = 'any', w = 600, h = 400, addClass='')
  - i = Math.floor(Math.random() * 89 + 10)
  if (type === 'avatar')
    img(src=`https://pavatar.qom.vn/${w + i}`, alt="", class = addClass)
  else
    img(src=`https://placeimg.qom.vn/${w + i}/${h + i}/${type}`, alt="", class = addClass)

mixin breadcrumb(...list)
  - var lastItem = list.pop()
  ol.breadcrumb.breadcrumb--white.mb-0
    each item in list
      li.breadcrumb-item
        a.link-unstyled(href="#!")= item
    li.breadcrumb-item.active= lastItem

mixin pagination
