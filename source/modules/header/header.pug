include ../navbar/navbar
include ../menu/menu

mixin header
  header.header
    nav.top-page
      .container
        .top-page__inner
          .top-page__text Chào mừng bạn đến với Trung Tâm Sửa Chữa Ôtô Quang Đức
          .top-page__socials
            a(href="#!")
              i.fab.fa-facebook-f
            a(href="#!")
              i.fab.fa-twitter
            a(href="#!")
              i.fab.fa-google-plus-g
            a(href="#!")
              i.fab.fa-youtube

    .header__wrapper
      .container
        .header__inner
          a.header__logo(href="./index.html")
            img(src="./images/logo.png", alt="")
          .header__elements
            +navbar
              +search

              +menu(menu)

              .h-info
                .h-info__item
                  img.h-info__icon(src="./images/icon-map-marker.png", alt="")
                  .h-info__label Địa chỉ showroom
                  .h-info__text 1075 Giải Phóng, Giáp Bát, Hoàng Mai, Hà Nội, Vietnam
                .h-info__item
                  img.h-info__icon(src="./images/icon-clock.png", alt="")
                  .h-info__label Thời gian làm việc
                  .h-info__text 8h00 - 17h00, thứ 2 - thứ 7
                .h-info__item
                  img.h-info__icon(src="./images/icon-phone-call.png", alt="")
                  .h-info__label Hotline tư vấn
                  .h-info__text.h-info__text--hotline #[a(href="tel:0962677726") 0962677726]

            button.btn-toggle.d-xl-none.js-navbar-toggle.ms-3

    nav.navigation
      .container
        .navigation__inner
          button.search-toggle(type="button")
            i.fal.fa-search
