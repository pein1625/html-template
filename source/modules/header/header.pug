include ../navbar/navbar
include ../menu/menu

mixin header
  header.header
    .header__wrapper
      .container
        .header__inner
          a.header__logo(href="./index.html")
            img(src="./images/logo.png", alt="")
          .header__elements
            +navbar
              +search
              +menu(menu)

              ul.menu.menu-root.menu-root-right
                li.menu-item
                  a.menu-link(href="./news.html") Tin tức xuất bản
                li.menu-item
                  a.menu-link(href="#!") Nhãn hiệu
                li.menu-item
                  a.menu-link(href="./contact.html") Liên hệ

              ul.h-contact
                li
                  a(href="#!")
                    i.fal.fa-fw.fa-envelope.me-2
                    span Contact
                li
                  a(href="#!")
                    i.fal.fa-fw.fa-clock.me-2
                    span 08:00 - 17:00
                li
                  a(href="tel:0999.999999")
                    i.fas.fa-fw.fa-phone.me-2
                    span 0999.999999
                li.h-lang
                  a.h-lang__toggle(href="#!")
                    span Tiếng việt
                    img(src="./images/vn.svg", alt="")
                  ul.h-lang__dropdown
                    li
                      a(href="#!")
                        span Tiếng Việt
                        img(src="./images/vn.svg", alt="")
                    li
                      a(href="#!")
                        span English
                        img(src="./images/gb.svg", alt="")

            a.h-btn(href="#!") Đăng ký

            button.btn-toggle.d-xl-none.js-navbar-toggle.ms-3
