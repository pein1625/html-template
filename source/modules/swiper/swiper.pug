mixin preview-slider
  .preview-slider
    .preview-slider__container.swiper-container
      .swiper-wrapper
        - for(let i = 0; i < 5; i++)
          .swiper-slide.bg-white
            .ratio.ratio-3x2.js-zoom(data-zoom-image=`./images/detail-${i + 1}.webp`)
              img(src=`./images/detail-${i + 1}.webp`, alt="")

mixin thumb-slider
  .thumb-slider
    .thumb-slider__prev
      i.fa.fa-angle-left
    .thumb-slider__next
      i.fa.fa-angle-right
    .thumb-slider__container.swiper-container
      .swiper-wrapper
        - for(let i = 0; i < 5; i++)
          .swiper-slide.bg-white
            .ratio.ratio-3x2
              img(src=`./images/detail-${i + 1}.webp`, alt="")

mixin preview
  article.preview
    .preview__main
      +preview-slider
    .preview__thumbs
      +thumb-slider

mixin swiper(el, number, hasNav, hasPaging)
  div(class=el)
    if (hasNav)
      div(class=el + '__prev')
        i.fa.fa-angle-left
      div(class=el + '__next')
        i.fa.fa-angle-right
    if (hasPaging)
      div(class=el + '__pagination')
    .swiper-container(class=el + '__container')
      .swiper-wrapper
        - for(let i = 0; i < number; i++)
          .swiper-slide
            block

mixin banner-slider
  .banner-slider
    .banner-slider__prev
      i.fal.fa-angle-left
    .banner-slider__next
      i.fal.fa-angle-right
    .banner-slider__pagination
    .banner-slider__container.swiper-container
      .swiper-wrapper
        - for(let i = 0; i < 4; i++)
          .swiper-slide
            a.banner-slider__frame(href="#!")
              img(src=`./images/banner-slide-${i + 1}.webp`, alt="")

