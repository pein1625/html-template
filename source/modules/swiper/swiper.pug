mixin preview-slider
  .preview-slider
    .preview-slider__container.swiper-container
      .swiper-wrapper
        - for(let i = 0; i < 6; i++)
          .swiper-slide.bg-white
            .ratio.ratio-3x2
              img(src=`http://placekitten.com/1000/75${i}`, alt="")

mixin thumb-slider
  .thumb-slider
    .thumb-slider__prev
      i.fa.fa-angle-left
    .thumb-slider__next
      i.fa.fa-angle-right
    .thumb-slider__container.swiper-container
      .swiper-wrapper
        - for(let i = 0; i < 6; i++)
          .swiper-slide.bg-white
            .ratio.ratio-3x2
              img(src=`http://placekitten.com/1000/75${i}`, alt="")

mixin preview
  article.preview
    .preview__main
      +preview-slider
    .preview__thumbs
      +thumb-slider

mixin swiper(el, number, hasNav, hasPaging)
  div(class=el)
    if (hasNav)
      div(class=el + '__prev')
        i.fa.fa-angle-left
      div(class=el + '__next')
        i.fa.fa-angle-right
    if (hasPaging)
      div(class=el + '__pagination')
    .swiper-container(class=el + '__container')
      .swiper-wrapper
        - for(let i = 0; i < number; i++)
          .swiper-slide
            block

mixin banner-slider
  .banner-slider
    .banner-slider__widgets
      .container
        .banner-slider__pagination
    .banner-slider__container.swiper-container
      .swiper-wrapper
        - for(let i = 0; i < 3; i++)
          .swiper-slide.banner-slider__slide
            .container
              .banner-slider__inner
                .banner-slider__title TRUNG TÂM phát triển thương mại điện tử
                .banner-slider__desc Lorem ipsum dolor sit amet, consectetur adipiscing elit. Hendrerit id tincidunt diam quis cursus ultricies facilisis urna, arcu.
                a.banner-slider__btn.n-btn(href="#!")
                  | Chi tiết
                  i.fal.fa-arrow-right.ms-2
                img.banner-slider__img(src="./images/banner-img.png", alt="")

mixin partner-slider
  .partner-slider
    .partner-slider__prev
      i.fal.fa-angle-left
    .partner-slider__next
      i.fal.fa-angle-right
    .partner-slider__container.swiper-container
      .swiper-wrapper
        - for(let i = 0; i < 8; i++)
          .swiper-slide
            a.partner-slider__frame(href="#!")
              img(src=`./images/partner-${i + 1}.png`, alt="")

mixin event-slider
  .event-slider
    .event-slider__prev
      i.fal.fa-arrow-left
    .event-slider__next
      i.fal.fa-arrow-right
    .event-slider__container.swiper-container
      .swiper-wrapper
        - for(let i = 0; i < 2; i++)
          .swiper-slide
            +event-2('./images/event-1.jpg', '10/2022')
          .swiper-slide
            +event-2('./images/event-2.jpg', '09/2022')
          .swiper-slide
            +event-2('./images/event-3.jpg', '06/2022')
