mixin contact-page
  section.contact-page
    .container
      h1.contact-page__title Liên hệ
      .row
        .col-lg-6.mb-30
          h2.contact-page__subtitle Viết nhận xét
          +contact-form

        .col-lg-6.mb-30
          h2.contact-page__subtitle Chúng tôi ở đây
          +contact-info


