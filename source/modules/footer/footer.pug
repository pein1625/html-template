mixin footer
  footer.footer
    .container-fluid
      .footer__grid
        .footer__col
          a.logo(href="./index.html")
            img(src="./images/logo.svg", alt="")
            span Kết nối cung cầu

          form.subscribe-form.mt-4.mb-3(action="#!")
            .subscribe-form__label.mb-12 Nhận thông tin mới nhất về sản phẩm và khuyến mại
            .input-group
              input.form-control(type="email", placeholder="Nhập email của bạn")
              button.input-group-text(type="button")
                i.fal.fa-paper-plane

          .row.align-items-center
            .col-auto
              ul.f-social
                li
                  a(href="#!")
                    i.fab.fa-facebook-f
                li
                  a(href="#!")
                    i.fab.fa-youtube
            .col.text-center © Copyright 2024 Ketnoicungcau

        .footer__col
          h3.footer__title Về chúng tôi
          ul.f-menu
            each item in ["Hướng dẫn mua hàng", "Chính sách đổi trả", "Điều khoản- Quy định", "Quy trình giải quyết khiếu nại", "Chính sách vận chuyển", "Chính sách bảo mật"]
              li
                a(href="#!")= item
        .footer__col
          h3.footer__title Đối tác
          ul.f-menu
            each item in ["Giới thiệu","Điều khoản chung","Quy chế hoạt động","Quy định tham gia"]
              li
                a(href="#!")= item
        .footer__col
          h3.footer__title Tin tức
          ul.f-menu
            each item in ["Đặc sản vùng miền", "Sản phẩm khác", "Sản phẩm OCOP"]
              li
                a(href="#!")= item
        .footer__col
          h3.footer__title Liên hệ
          ul.f-contact
            li.f-contact__item
              span.f-contact__icon
                i.fal.fa-map-marker-alt
              | 25 Ngô Quyền - Quận Hoàn Kiếm - Hà Nội
            li.f-contact__item
              span.f-contact__icon
                i.fal.fa-envelope
              a(href="mailto:daotao@ecomviet.vn") daotao@ecomviet.vn
            li.f-contact__item
              span.f-contact__icon
                i.fal.fa-phone
              a(href="tel:024 2220 5365") 024 2220 5365

  nav.f-nav
    .container
      .f-nav__inner
        each item in ['Trang chủ', 'Doanh nghiệp', 'Chào bán', 'Chào mua', 'Tin tức', 'Hỏi đáp', 'Đăng nhập', 'Đăng ký']
          a(href="#!")= item
