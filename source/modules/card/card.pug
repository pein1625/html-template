        +od-item

  +od-summary('mt-3')

mixin media-uploader
  .media-uploader.js-media-uploader
    .media-uploader__list.js-media-uploader-list
      .media-uploader__item
        label.media-uploader__label
          input.js-media-image-input(type="file", multiple, accept="image/*")
