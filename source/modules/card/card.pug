  section.od-section(class=className)
    .od-section__body
      .row.justify-content-between.gx-3
        .col-auto Tổng số tiền (2 sản phẩm):
        .col-auto.text-end 450.000 ₫

      .row.justify-content-between.gx-3.mt-3
        .col-auto Tổng giảm
        .col-auto.text-end -245.000 ₫

      .row.justify-content-between.gx-3.mt-3
        .col-auto
          div Tổng thanh toán
          div (2 sản phẩm):
        .col-auto.text-end
          .fs-24.text-primary.fw-600(style="line-height: 1.2") 280.000 ₫
          div Tiết kiệm 165.000đ

      .border-top.mt-3

      .row.justify-content-between.gx-3.mt-3.align-items-center
        .col-auto Phương thức thanh toán
        .col-auto.text-end.ms-auto
          select.form-select
            option Thanh toán COD
            option Thanh toán COD
            option Thanh toán COD
            option Thanh toán COD

      .row.justify-content-between.gx-3.mt-3.align-items-center
        .col-auto Trạng thái thanh toán
        .col-auto.text-end
          span.badge.text-primary.bg-primary-light Chưa thanh toán

mixin od-cancel-detail(badge='Đang giao hàng', badgeClass='text-secondary bg-secondary-light')
  section.od-section.mt-3
    .od-section__header
      .od-section__icon
        i.fal.fa-fw.fal-lg.fa-store

      .od-section__title-wrap
        h2.od-section__title
          a.me-3(href="./order-detail.html") Cơ sở sản xuất miến dong Chiến Thọ
