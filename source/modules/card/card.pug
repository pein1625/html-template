mixin product
  - count++
  .product
    a.product__frame(href="#!")
      img(src=`./images/product-${count % 8 + 1}.png`, alt="")
    .product__label Sàn Việt
    .product__body
      .product__brands
        img.product__brand.ocop(src="./images/brand-1.png", alt="")
        img.product__brand.spcnnttb(src="./images/brand-2.png", alt="")
      h3.product__title
        a(href="#!") Nón cỏ bàng thời trang cho nữ
      .product__stars 4.6 #[i.fas.fa-star] | (23)
      .product__price 70.000 ₫
        span.product__discount -30%
      .product__old-price 120.000đ

