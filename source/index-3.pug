extends layout/page

block header
  +header('header--2')

block content
  section.section-3.section-3--light-blue.pb-0
    .container
      .row.g-30
        .col-auto.d-none.d-xl-block
          nav.menu-nav.menu-nav--static
            .menu-product-wrapper
              .menu-nav__title
                i.fal.fa-fw.fa-bars.me-2
                | Danh mục

              ul.menu.menu-product
                each item, index in ['Sản phẩm OCOP','Đặc sản vùng miền','Thời trang nữ','Thời trang nam','Vật tư nông nghiệp','Thiết bị điện tử','Gia dụng – Đời sống','Siêu thị – Tạp hoá','Thời trang trẻ em','Sức khoẻ – Làm đẹp','Thể thao – Du lịch']
                  li.menu-item.menu-item-group
                    a.menu-link(href="#!")
                      img(src=`./images/menu-icon-${index + 1}.png`, alt="")
                      = item
                    span.menu-toggle
                    ul.menu.menu-sub(data-title=item)
                      each item2 in ['Sản phẩm OCOP','Đặc sản vùng miền','Thời trang – Phụ kiện nữ','Thời trang – Phụ kiện nam','Vật tư nông nghiệp']
                        li.menu-item
                          a.menu-link(href="#!")= item2
        .col
          .position-relative.h-100
            +banner-slider('banner-slider--absolute banner-slider--2', 1)
              +card('./images/card-banner.jpg')

  section.section-3
    .container
      +s-shop

  +s-other-products
  +s-featured-products

  section.section-3.section-3--light-blue
    .container
      h2.section-3__title-2 Tin tức mới

      .row
        .col-lg-6.mb-30
          +news-3
        .col-lg-6.mb-30
          .mb-20.ml-0
            +news-2
          .mb-20.ml-0
            +news-2
          .mb-20.ml-0
            +news-2

      .text-center.mt-30
        a.button(href="./news.html") Xem tất cả
