extends layout/page

mixin cart-item
  a.cart-item(href="./product-detail.html")
    .cart-item__frame
      img(src="./images/product-1.jpg", alt="")
    .cart__title Bột rửa bát Finish Classic Power

mixin cart-header
  .cart__row
    .cart__col.text-center
      +checkbox('', '', 'js-cart-check-all')
    .cart__col Sản Phẩm
    .cart__col.text-center Đơn giá
    .cart__col.text-center Số lượng
    .cart__col.text-center Số tiền
    .cart__col.text-center Thao tác

mixin cart-group-header(title="Gian hàng 01")
  .cart__row.border-bottom
    .cart__col
      +checkbox('', '', 'js-cart-check-group')
    .cart__col.cart__col--4
      i.fal.fa-store.me-2
      span= title

mixin cart-row
  .cart__row.js-cart-item(data-unit-price="70000", data-discount="10000")
    .cart__col.text-center
      +checkbox('', '', 'js-cart-check-item')
    .cart__col
      +cart-item
    .cart__col.text-center.cart__unit-value 70.000 ₫
    .cart__col.text-center.cart__quantity
      +quantity('quantity--square quantity--lg', 'js-cart-quantity')
    .cart__col.text-center.cart__value.js-cart-value 70.000 ₫
    .cart__col.text-center
      a.cart__delete.js-cart-delete-item(href="#!") Xoá

block content
  section.section
    .container
      h1.section__title Giỏ hàng

      form.cart(action="./cart-3.html")
        .cart__grid
          .cart__col
            .cart__group.d-none.d-lg-block
              +cart-header
            .cart__group
              +cart-group-header('Gian hàng 1')
              +cart-row
              +cart-row
            .cart__group
              +cart-group-header('Gian hàng 2')
              +cart-row
            .cart__group
              +cart-group-header('Gian hàng 3')
              +cart-row

          .cart__col
            section.cart-summary
              .cart-summary__header
                i.fal.fa-fw.fa-lg.fa-map-marker-alt.me-2.text-primary
                span Địa chỉ nhận hàng
              .cart-summary__body
                .fw-600 Nguyễn Thuỵ Dương
                .fw-600.mt-1 0987654321
                .mt-1 Số 2 Đ. Kim Giang, Kim Giang, Thanh Xuân, Hà Nội
                .mt-2
                  a.btn.btn-outline-primary(href="./cart-2.html") Sửa

            section.cart-summary.mt-2
              .cart-summary__body
                .d-flex.justify-content-between
                  span Tạm tính
                  strong.fw-600.js-cart-subtotal 0đ
                .d-flex.justify-content-between.mt-1
                  span Giảm giá
                  strong.fw-600 -#[span.js-cart-total-discount 117.000đ]
                .d-flex.justify-content-between.border-top.mt-3.pt-3.align-items-center
                  span Tổng tiền
                  strong.cart-summary__total.js-cart-grandtotal 0₫
            .d-grid
              button.cart__btn.w-100.btn.btn-primary.text-white.mt-2.js-cart-submit-btn(type="submit", disabled)
                div MUA HÀNG
                .fs-12.fw-400(style="opacity: 0.9; text-transform: unset") (#[span.js-cart-item-count 3] sản phẩm)
