extends layout/page

block content
  article.banner
    img(src="./images/banner-1.jpg", alt="")

  nav.news-nav
    .container
      .news-nav__list
        a.news-nav__item(href="./news.html")
          .news-nav__icon
            img(src="./images/icon-news.png", alt="")
          .news-nav__label Tin IPN
        a.news-nav__item.active(href="./recruit.html")
          .news-nav__icon
            img(src="./images/icon-recruit.png", alt="")
          .news-nav__label Tin tuyển dụng

  section.section
    .container
      div
        - for(let i = 0; i < 8; i++)
          +recruit

      nav.d-flex.justify-content-center.mt-30
        +pagination
