extends layout/page

block content
  section.shop-banner
    img.shop-banner__bg(src="./images/shop-banner-bg.jpg", alt="")
    .container
      .row.g-3
        .col-auto
          .shop-banner__frame
            img(src="./images/shop.jpg", alt="")
        .col-auto
          .shop-banner__name Tên shop
          .shop-banner__stars
            .row.gx-2.gy-0
              .col-auto
                i.fas.fa-star.me-1
                span 4.9
                span /5
              .col-lg.text-white 12345 người theo dõi
        .col
          .shop-banner__btn-wrap
            a.btn.btn-primary.text-white.text-nowrap(href="#!") Theo dõi
        .col-sm-auto.align-self-end
          +search-shop

  section.pt-3.pb-3.pb-xl-40
    .container
      .banner-grid.row.g-3
        .banner-grid__col.col
          .position-relative.h-100
            +banner-slider('banner-slider--absolute', 1)
        .banner-grid__col.col-auto
          .row.g-12
            .col-6.col-lg-12
              +card-slider-2
            .col-6.col-lg-12
              +card-slider-2

  section.pb-4
    .container
      .row.g-3
        .col-lg-9.order-lg-1
          section.section-6
            .section-6__header
              h1.section-6__title Vật tư nông nghiệp
              +pd-nav

            .product-grid
              - for(let i = 0; i < 25; i++)
                +product

            nav.d-flex.justify-content-center.mt-3
              +pagination

        .col-lg-3
          +pd-sidebar
