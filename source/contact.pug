extends layout/page

block content
  .container.pb-50
    form.contact
      .contact__map.ratio
        iframe(src='https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3724.276132266639!2d105.78908421533202!3d21.021634493396395!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1svi!2s!4v1587606986563!5m2!1svi!2s' width='600' height='450' frameborder='0' style='border:0;' allowfullscreen='' aria-hidden='false' tabindex='0')

      .row.g-4.mb-40.justify-content-center
        .col-sm-4.col-xl-3
          .ct-info
            .row.g-3.g-xl-20.align-items-center
              .col-auto
                img.ct-info__icon(src="./images/icon-envelope.png", alt="")
              .col
                .fw-700.text-primary Mọi thắc mắc xin liên hệ
                a(href="mailto:contact@vietsach.com.vn") contact@vietsach.com.vn
        .col-sm-4.col-xl-3
          .ct-info
            .row.g-3.g-xl-20.align-items-center
              .col-auto
                img.ct-info__icon(src="./images/icon-comments.png", alt="")
              .col
                .fw-700.text-primary Mọi thắc mắc xin liên hệ
                a.fw-700.text-info(href="tel:0999.999999") 0999.999999
        .col-sm-4.col-xl-3
          .ct-info
            .row.g-3.g-xl-20.align-items-center
              .col-auto
                img.ct-info__icon(src="./images/icon-fax.png", alt="")
              .col
                .fw-700.text-primary Fax
                a.fw-700.text-info(href="tel:0999.999999") 0999.999999

      h1.contact__title LIÊN HỆ VỚI CHÚNG TÔI
      .text-primary.text-center.fw-700.text-uppercase.mb-10 Hãy để lại tin nhắn
      .text-primary.text-center.mb-30 Thắc mắc của bạn sẽ được chúng tôi trả lời trong vòng 24 Giờ !

      .row.gx-30.gy-3
        .col-md-6
          label.form-label Họ tên:
          input.form-control(type="text")
        .col-md-6
          label.form-label Số điện thoại:
          input.form-control(type="text")
        .col-md-6
          label.form-label Email
          input.form-control(type="email")
        .col-md-6
          label.form-label Website (Nếu có):
          input.form-control(type="text")
        .col-12
          label.form-label Chủ đề
          input.form-control(type="text")
        .col-12
          label.form-label Nội dung
          textarea.form-control(rows="4")
        .col-12.text-center.pt-3
          button.contact__btn(type="submit") Gửi tin nhắn
